<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkme.noter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/noter_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thinkme.noter.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.thinkme.noter.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.thinkme.noter.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thinkme.noter.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.thinkme.noter.AboutNoteActivity"
            android:label="@string/title_activity_about_note" >
        </activity>
        <activity
            android:name="com.thinkme.noter.AboutNoterActivity"
            android:label="@string/title_activity_about_noter" >
        </activity>
        <activity
            android:name="com.thinkme.noter.ControlsActivity"
            android:label="@string/title_activity_controls" >
        </activity>
        <activity
            android:name="com.thinkme.noter.UpdateActivity"
            android:label="@string/title_activity_update" >
        </activity>
    </application>

</manifest>